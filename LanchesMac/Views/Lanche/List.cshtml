@model LancheListViewModel




<div>
    <h2>@Model.CategoriaAtual</h2>
</div>

@*ViewDAta, ViewBag, TempDAta
<h2>@ViewData["Data"]</h2>
<hr />
<h3>@ViewBag.Total @ViewBag.TotalLanches</h3>
<hr />
@* Só recupera uma vez
<h1>@TempData["Nome"]</h1>*@
<div class="container">
    <div class="row">
        @foreach (var lanche in Model.Lanches)
        {
            <div class="col-sm-4 col-md-4 col-lg-4">
                <p><img src="@lanche.ImagemUrl" class="img-fluid" /></p>
                <h3>Preço: @lanche.Preco.ToString("c")</h3>
                <h3>@lanche.Nome</h3>
                <h4>@lanche.DescricaoCurta</h4>
            </div>
        }
    </div>
</div>